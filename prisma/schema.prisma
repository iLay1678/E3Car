// Prisma schema for Entra invite redemption

generator prod {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "rhel-openssl-1.1.x"]
  previewFeatures = ["driverAdapters"]
}

generator cf-prod {
  provider        = "prisma-client-js"
  runtime         = "cloudflare"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppConfig {
  id           Int     @id @default(autoincrement())
  clientId     String
  clientSecret String
  tenantId     String?
  licenseSkuId String?

  // OAuth Configuration
  authClientId     String?
  authClientSecret String?
  authUrl          String?
  tokenUrl         String?
  userUrl          String?

  // Payment Configuration
  epayPid     String?
  epayKey     String?
  epayUrl     String?  @default("https://credit.linux.do/epay")
  invitePrice Decimal? @default(10.00)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdminToken {
  id           Int      @id @default(autoincrement())
  accessToken  String
  refreshToken String?
  tokenType    String
  scope        String?
  expiresIn    Int
  expiresAt    DateTime
  obtainedAt   DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  nickname  String?
  avatar    String?
  createdAt DateTime @default(now())

  orders  Order[]
  invites InviteCode[]
}

model Order {
  id         Int      @id @default(autoincrement())
  tradeNo    String   @unique
  apiTradeNo String?
  amount     Decimal
  status     String   @default("PENDING") // PENDING, PAID, CANCELLED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  inviteCode InviteCode?
}

model InviteCode {
  id        Int       @id @default(autoincrement())
  code      String    @unique
  used      Boolean   @default(false)
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  source String @default("MANUAL") // MANUAL, PURCHASE

  // Relations
  orderId Int?   @unique
  order   Order? @relation(fields: [orderId], references: [id])

  ownerId Int?
  owner   User? @relation(fields: [ownerId], references: [id])

  enterpriseUserId Int?
  enterpriseUser   EnterpriseUser? @relation("UserInvites", fields: [enterpriseUserId], references: [id])
}

model EnterpriseUser {
  id                Int          @id @default(autoincrement())
  graphUserId       String       @unique
  userPrincipalName String       @unique
  displayName       String?
  createdAt         DateTime     @default(now())
  invites           InviteCode[] @relation("UserInvites")
}

model AdminSession {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}
