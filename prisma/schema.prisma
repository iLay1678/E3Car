// Prisma schema for Entra invite redemption

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AppConfig {
  id           Int      @id @default(autoincrement())
  clientId     String
  clientSecret String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AdminToken {
  id           Int      @id @default(autoincrement())
  accessToken  String
  refreshToken String?
  tokenType    String
  scope        String?
  expiresIn    Int
  expiresAt    DateTime
  obtainedAt   DateTime @default(now())
}

model InviteCode {
  id               Int      @id @default(autoincrement())
  code             String   @unique
  used             Boolean  @default(false)
  usedAt           DateTime?
  createdAt        DateTime @default(now())
  enterpriseUserId Int?

  enterpriseUser   EnterpriseUser? @relation("UserInvites", fields: [enterpriseUserId], references: [id])
}

model EnterpriseUser {
  id                Int          @id @default(autoincrement())
  graphUserId       String       @unique
  userPrincipalName String       @unique
  displayName       String?
  createdAt         DateTime     @default(now())
  invites           InviteCode[] @relation("UserInvites")
}
